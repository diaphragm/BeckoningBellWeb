- user = session.dig(@bell.id, 'user')
= javascript_pack_tag 'bell_show'
javascript:
  window.IV = {} // Instance Variable
  IV.chatTextList = #{raw BloodborneUtils.message_list.map{|i,x| {id: i, text: x}}.to_json}
  IV.chatStampList = #{raw BloodborneUtils.stamp_list.map{|i,x| {id: i, text: image_path("stamps/#{x}")}}.to_json}
  IV.bellId = "#{raw @bell.id}"
  IV.user = "#{raw session.dig(@bell.id, 'user')}"
  IV.chatUrl = "#{raw bell_messages_path(@bell)}"

#app
  el-container
    el-header
      | 狩人呼びの鐘Web
    el-main
      #chat-viewer
        transition-group name="message-list"
          chat-message v-for="message in messages" v-bind:message="message" v-bind:key="message.id"
    el-footer
      el-popover trigger="click"
        chat-select-text
        el-button slot="reference"
          | テキスト
      el-popover trigger="click"
        chat-select-stamp
        el-button slot="reference"
